"use client";

import { Excalidraw } from "@excalidraw/excalidraw";
import "@excalidraw/excalidraw/index.css";
import { useSearchParams } from "next/navigation";

export default function Phase1Whiteboard() {
  // Only one "mode" variable, no useState needed
  const searchParams = useSearchParams();
  const mode = searchParams.get("mode"); // "student" or "tutor"
  const isStudent = mode === "student";

  console.log("Phase1Whiteboard mode:", mode, "isStudent:", isStudent);

  return (
    <div style={{ height: "100vh", position: "relative" }}>
      {/* Mode badge */}
      <div
        style={{
          position: "fixed",
          top: 12,
          right: 12,
          zIndex: 9999,
          background: isStudent ? "#333" : "#0b5",
          color: "#fff",
          padding: "6px 12px",
          borderRadius: 6,
          fontSize: 12,
          fontWeight: 600,
        }}
      >
        {isStudent ? "STUDENT VIEW (Read only)" : "TUTOR VIEW (Editable)"}
      </div>

      {/* Excalidraw */}
      <Excalidraw viewModeEnabled={isStudent} />
    </div>
  );
}

